<com.nambimobile.widgets.efab.ExpandableFabLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/expandable_fab_layout"
    app:flow_horizontalAlign="start"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.nambimobile.widgets.efab.ExpandableFab
        android:id="@+id/expandable_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       app:efab_size="mini"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="@dimen/ui_margin_medium"
        android:layout_marginRight="@dimen/ui_margin_medium"
        app:efab_color="#9374DE"
        android:layout_gravity="center|bottom"
        app:efab_icon="@drawable/ic_plus_white_24dp"
        app:efab_iconAnimationRotationDeg="-225"
        app:efab_closingAnticipateTension="0">

    </com.nambimobile.widgets.efab.ExpandableFab>
<!--        app:label_text="Compose"/>-->
    <com.nambimobile.widgets.efab.FabOption
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fab_orientation="portrait"

        android:onClick="onClickPortraitOption1"/>

    <com.nambimobile.widgets.efab.FabOption
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fab_color="#FF8800"
        app:fab_icon="@drawable/ic_baseline_bookmark_add_36"

        app:label_backgroundColor="#808080"
        app:label_textColor="#FFC0CB"/>
    <com.nambimobile.widgets.efab.FabOption
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fab_color="#5283F5"
        app:fab_icon="@drawable/tafsir"

        app:label_backgroundColor="#0000FF"/>
    <com.nambimobile.widgets.efab.FabOption
        app:layout_dodgeInsetEdges="all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fab_color="#007F00"
        app:fab_icon="@drawable/baseline_share_36"

        app:label_backgroundColor="#7F7F00"/>
</com.nambimobile.widgets.efab.ExpandableFabLayout>