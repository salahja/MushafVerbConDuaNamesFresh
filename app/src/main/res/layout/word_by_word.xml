<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chips_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/textViewMargin"
    android:layout_marginRight="@dimen/textViewMargin"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/textViewPadding">

    <TextView
        android:id="@+id/word_arabic_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:lineSpacing="-4dp"
        android:lineSpacingExtra="-4dp"
        android:checkable="true"
        style="@android:style/TextAppearance.DeviceDefault.Large"
        android:text="flow"
        android:visibility="visible" />

    <TextView
        style="@android:style/TextAppearance.DeviceDefault.Small"
        android:id="@+id/root_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkable="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/wordno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkable="true"
        android:visibility="gone" />

    <TextView
        style="@android:style/TextAppearance.DeviceDefault.Medium"
        android:id="@+id/word_trans_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</LinearLayout>