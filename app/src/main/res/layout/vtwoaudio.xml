<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="bottom"
    android:layout_width="match_parent"
    android:background="?android:colorSecondary"

    android:layout_height="200dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/topcard"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_margin="12dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:dividerHeight="0.0px"


        app:cardCornerRadius="12dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="false"
        app:layout_anchorGravity="bottom"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@color/colorAccent"
        app:strokeColor="@color/color_primary_variant"
        app:strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/themeheader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.058" />


            <TextView
                android:id="@+id/start_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"

                android:layout_gravity="start"
                android:fontFamily="cursive"
                android:text="Start name"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/themeheader"
                app:layout_constraintStart_toStartOf="@+id/themeheader"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.145" />

            <TextView
                android:id="@+id/startimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerInParent="true"

                android:background="@drawable/baseline_arrow_right_24"
                android:fontFamily="cursive"


                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="@+id/start_range"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintHorizontal_bias="0.194"
                app:layout_constraintStart_toEndOf="@+id/start_range"
                app:layout_constraintTop_toTopOf="@+id/start_range"
                app:layout_constraintVertical_bias="0.0" />


            <TextView
                android:id="@+id/endrange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/start_range"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:fontFamily="cursive"
                android:text="endrange"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/start_range"
                app:layout_constraintHorizontal_bias="0.484"
                app:layout_constraintStart_toStartOf="@+id/start_range"
                app:layout_constraintTop_toBottomOf="@+id/start_range"
                app:layout_constraintVertical_bias="0.025" />

            <TextView
                android:id="@+id/endimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/start_range"
                android:layout_toEndOf="@id/endrange"
                android:background="@drawable/baseline_arrow_right_24"
                android:fontFamily="cursive"


                android:textSize="25sp"

                app:layout_constraintBottom_toBottomOf="@+id/endrange"
                app:layout_constraintEnd_toEndOf="@+id/startimage"
                app:layout_constraintStart_toStartOf="@+id/startimage"
                app:layout_constraintTop_toTopOf="@+id/endrange"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/qariname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/start_range"
                android:layout_alignParentStart="true"

                android:layout_centerInParent="true"
                android:layout_toEndOf="@id/endrange"
                android:fontFamily="cursive"
                android:text="qari lable"


                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/endrange"
                app:layout_constraintStart_toStartOf="@+id/endrange"
                app:layout_constraintTop_toBottomOf="@+id/endrange"
                app:layout_constraintVertical_bias="0.076" />

            <TextView
                android:id="@+id/qariimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/start_range"
                android:layout_toEndOf="@id/endrange"
                android:background="@drawable/baseline_arrow_right_24"


                android:fontFamily="cursive"

                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="@+id/qariname"
                app:layout_constraintEnd_toEndOf="@+id/endimage"
                app:layout_constraintStart_toStartOf="@+id/endimage"
                app:layout_constraintTop_toTopOf="@+id/qariname"
                app:layout_constraintVertical_bias="0.0" />

            <ImageButton
                android:id="@+id/pplaybutton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"

                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_play_new"
                android:tag="stopped"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.507"
                app:layout_constraintStart_toStartOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>